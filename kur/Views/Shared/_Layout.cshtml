<!DOCTYPE html>

<html lang="tr">
<head>
    <script id="ks">
      
        
        function donus() {
            var e = document.getElementById('k1').value;
           // var selectedOp = e.options[e.selectedIndex].text;
            var   k= document.getElementById('k2').value;
            //var selectedOp2 = k.options[k.selectedIndex].text;
            var deger2 = parseInt(document.getElementById('sayi1').value);
            if (e == "USD" && k == "Euro") {
                document.getElementById('sonuc').value = deger2 *(0.92);
            }
            if (e == "USD" && k == "Sterling") {
                document.getElementById('sonuc').value = deger2 * (0.79);
            }
            if (e == "Euro" && k == "USD") {
                document.getElementById('sonuc').value = deger2 / (0.92);
            }
            if (e == "Euro" && k == "Sterling") {
                document.getElementById('sonuc').value = deger2 * (0.86);
            }
            if (e == "Sterling" && k == "USD") {
                document.getElementById('sonuc').value = deger2 / (0.79);
            }
            if (e == "Sterling" && k == "Euro") {
                document.getElementById('sonuc').value = deger2 / (0.86);
            }

        }
    </script>
    <meta charset="utf-8" />
