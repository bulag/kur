            <select name="kur2"id="k2">

                <option selected>Kur Seç...</option>
                <option>USD</option>

                <option>Euro</option>

                <option>Sterling</option>

            </select>
            <br/><br/>
            <br /><br />
        <input type="button" value="Dönüştür" onclick="donus()" />
            <p id="padi"> --Sonuç--<br /><input type="text" id="sonuc" color="blue" /></p>
        </div>
</section>
